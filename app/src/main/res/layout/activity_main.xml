<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="my.portablehotspot.app.MainActivity"
    android:background="@drawable/device_background">

    <EditText
        android:id="@+id/ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/abc_search_url_text_holo"
        android:hint="Please Enter SSID Name"
        android:inputType="text"
        android:layout_above="@+id/password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textColor="@color/abc_search_url_text_holo"
        android:id="@+id/cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="119dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="@color/abc_search_url_text_holo"
        android:id="@+id/start"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/cancel"
        android:layout_alignBottom="@+id/cancel"
        android:layout_alignRight="@+id/ssid"
        android:layout_alignEnd="@+id/ssid" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@color/abc_search_url_text_holo"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_above="@+id/rdgrp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdgrp"
        android:layout_above="@+id/cancel">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secured"
            android:textColor="@color/abc_search_url_text_holo"
            android:id="@+id/secured" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textColor="@color/abc_search_url_text_holo"
            android:id="@+id/open" />
</RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txview"
        android:text="Set up Portable Hotspot"
        android:textColor="@color/abc_search_url_text_holo"
        android:layout_above="@+id/ssid" />


</RelativeLayout>

